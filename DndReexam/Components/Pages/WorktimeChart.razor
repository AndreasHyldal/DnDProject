@page "/worktime-chart"
@using DndReexam.Services
@inject WorktimeService WorktimeService
@inject IJSRuntime JS
@using MudBlazor

<MudCard>
    <MudCardContent>
        <MudText Typo="Typo.h6">Worktime Summary</MudText>
        <MudChart ChartType="ChartType.Bar"
                  InputLabels="@Labels"
                  ChartSeries="@Series"
                  Width="@Width"
                  Height="@Height" />
    </MudCardContent>
</MudCard>

@code {
    [Parameter] public List<ChartSeries> Series { get; set; } = new();
    [Parameter] public string[] Labels { get; set; } = Array.Empty<string>();
    [Parameter] public string Width { get; set; } = "100%";
    [Parameter] public string Height { get; set; } = "350px";
}
